@model IEnumerable<CovidAnalyzer.Models.Patient>

@{
    ViewBag.Title = "Hospital";
}

@foreach (var item in CovidAnalyzer.Services.Storage.Instance.hospitalsActives) {
    if (item.regionHospital == CovidAnalyzer.Services.Storage.Instance.hospitalSelected) {
        <h1 style="position: absolute; top: 50px; left: 220px;">@Html.DisplayFor(modelItem => item.nameHostpial)</h1> 
    }
}
        <div class="card w-50 col-10" style="position: absolute; top: 40px; left: 700px;">
            <div class="card-body">
                @foreach (var item in CovidAnalyzer.Services.Storage.Instance.hospitalsActives)
                {
                    if (item.regionHospital == CovidAnalyzer.Services.Storage.Instance.hospitalSelected)
                    {
                        <ul class="list-group list-group-flush col-12">
                            <li class="list-group-item"><strong>Nombre </strong>@Html.DisplayFor(modelItem => item.nameHostpial)</li>
                            <li class="list-group-item"><strong>Camas </strong>@Html.DisplayFor(modelItem => item.beadsAvailable)</li>
                            <li class="list-group-item"><strong>Registrados </strong>@Html.DisplayFor(modelItem => item.patientsRegisters)</li>
                        </ul>
                    }
                }
            </div>
        </div>
        @if (ViewBag.smsRecovered != null)
        {
            <div class="alert alert-success alert-dismissible fade show col-5" style="position: absolute; top: 50px; left: 700px;" role="alert">
                <strong>Paciente no contagiado</strong> @ViewBag.smsRecovered
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="controls">
            <div class="form-inline float-left">
                <div class="form-group" style="position: relative; top: 100px; left: 10px;">
                    <select class="form-control" name="options">
                        <option value="dpi">DPI</option>
                        <option value="name">Nombre</option>
                        <option value="lastname">Apellido</option>
                    </select>
                </div>
                <input class="form-control" style="position: relative; top: 100px; margin-left:5px; left: 10px;" type="search" name="searchString" placeholder="Buscar" aria-label="Search">
                <input type="submit" style="position: relative; top: 100px; margin-left:5px; left: 10px;" class="btn btn-warning btn-send" name="searchButton" value="Buscar">
            </div>
        </div>

        <div>
            <table class="table table-sm" style="position: relative; top: 190px; left: 0px;">
                <thead>
                    <tr class="bg-warning">
                        <th scope="col" class="text-center">Nombre</th>
                        <th scope="col" class="text-center">Apellido</th>
                        <th scope="col" class="text-center">Edad</th>
                        <th scope="col" class="text-center">Departamento</th>
                        <th scope="col" class="text-center">Municipio</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" style="text-transform:capitalize">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-center" style="text-transform:capitalize">@Html.DisplayFor(modelItem => item.Lastname)</td>
                            <td class="text-center" style="text-transform:capitalize">@Html.DisplayFor(modelItem => item.Years)</td>
                            <td class="text-center" style="text-transform:capitalize">@Html.DisplayFor(modelItem => item.Departament)</td>
                            <td class="text-center" style="text-transform:capitalize">@Html.DisplayFor(modelItem => item.Municipality)</td>
                            <td>@Html.ActionLink("Recuperado", "Hospital", new { idPatient = item.Name })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <button type="button" id="searchButton" style="position: relative; top: 450px; left: 0px;" value="menu" class="btn btn-light" onclick="location.href='@Url.Action("InitialPage", "Home")'">
            Volver
        </button>



