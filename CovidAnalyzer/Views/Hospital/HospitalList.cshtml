@model CovidAnalyzer.Models.Hospital

@{
    ViewBag.Title = "HospitalList";
}
<br />
<h2>Hospitales</h2>
<hr />
@if (ViewBag.Hospital != null)
{

<div class="alert alert-light alert-dismissible fade show col-5" style="position:relative; top:0px; left:350px;" role="alert">
    <div class="card">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="card-header bg-warning">
            Hospital
        </div>
        <div class="card-body">
            @foreach (var item in CovidAnalyzer.Services.Storage.Instance.hospitalsActives)
            {
                if (item.nameHostpial == @ViewBag.Hospital)
                {
                    <ul class="list-group list-group-flush col-12">
                        <li class="list-group-item"><strong>Nombre </strong>@Html.DisplayFor(modelItem => item.nameHostpial)</li>
                        <li class="list-group-item"><strong>Camas disponibles </strong>@Html.DisplayFor(modelItem => item.beadsAvailable)</li>
                        <li class="list-group-item"><strong>Pacientes registrados </strong>@Html.DisplayFor(modelItem => item.patientsRegisters)</li>
                    </ul>
                }
            }
            <button type="button" class="btn btn-warning float-right"  style="position:relative; top:5px; left:0px;" onclick="location.href='@Url.Action("Hospital", "Hospital")'">Ir al hospital</button>
        </div>
    </div>

</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="controls">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-inline">
                        <input type="text" name="name" class="form-control" placeholder="Nombre del hospital" required="required" date-error="Ingrese un nombre" />
                        <input type="submit" class="btn btn-warning btn-send" style="margin: 10px" value="Buscar">
                    </div>
                </div>
            </div>
        </div>
        <div class="controls">
            <table class="table table-sm" style="position: relative; top: 30px; left:0px">
                <thead>
                    <tr class="bg-warning">
                        <th scope="col" class="text-center">Nombre</th>
                        <th scope="col" class="text-center">Region</th>
                        <th scope="col" class="text-center">Dirección</th>
                        <th scope="col" class="text-center">Infectados</th>
                        <th scope="col" class="text-center">Recuperados</th>
                        <th scope="col" class="text-center">Por atender</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in CovidAnalyzer.Services.Storage.Instance.hospitalsActives)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.nameHostpial)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.regionHospital)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.address)</td>
                            <td class="text-center">32</td>
                            <td class="text-center">23</td>
                            <td class="text-center">55</td>
                            <td>@Html.ActionLink("Ver hospital", "HospitalList", new { idHospital = item.regionHospital })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<br />
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="form-inline">
            <button type="button" onclick="location.href='@Url.Action("Panel", "Home")'" class="btn btn-warning">Regresar</button>
        </div>
    </div>
</div>