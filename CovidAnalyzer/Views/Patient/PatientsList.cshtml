@model CovidAnalyzer.Models.Patient

@{
    ViewBag.Title = "PatientsList";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <h1>Pacientes registrados</h1>
    <hr />
    <div class="controls">
        <div class="form-inline float-right">
            <div class="form-group" style="position: relative; top: 0px; left: 10px;">
                <select class="form-control" name="options">
                    <option value="dpi">DPI</option>
                    <option value="name">Nombre</option>
                    <option value="lastname">Apellido</option>
                </select>
            </div>
            <input class="form-control" style="position: relative; top: 0px; left: 10px;" type="search" placeholder="Buscar" value="searchString" aria-label="Search">

            <!-- Button trigger modal -->
            <input type="button" id="searchButton" href="#" style="position: relative; top: 0px; left: 10px;" onclick="javascript: update();" value="searchButton" class="btn btn-outline-warning" data-toggle="modal" data-target="#exampleModal">

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header badge-warning">
                            <h5 class="modal-title" id="exampleModalLabel">Información del paciente</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="card mb-3" style="max-width: 540px;">
                                <div class="row no-gutters">
                                    <div class="col-md-4"><img src="~/Content/Images/remote-work-woman.png" class="rounded float-md-left align-content-center" alt="..." width="150"></div>
                                    <div class="col-md-8">
                                        <div class="card-body" id="divGet">
                                            <strong>Nombre </strong><p class="font-weight-light">@CovidAnalyzer.Services.Storage.Instance.patientReturn.Name</p>
                                            <strong>Apellido</strong><p class="font-weight-light">@CovidAnalyzer.Services.Storage.Instance.patientReturn.Lastname</p>
                                            <strong>Descripción</strong><p class="font-weight-light">@CovidAnalyzer.Services.Storage.Instance.patientReturn.Description</p>
                                            <strong>Edad</strong><p class="font-weight-light">@CovidAnalyzer.Services.Storage.Instance.patientReturn.Years</p>
                                            <strong>Departamento</strong><p class="font-weight-light">@CovidAnalyzer.Services.Storage.Instance.patientReturn.Departament</p>
                                            <strong>Municipio</strong><p class="font-weight-light">@CovidAnalyzer.Services.Storage.Instance.patientReturn.Municipality</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-warning">Recuperado</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-outline-warning" style="position: relative; top: 0px; left: 0px;" type="button" onclick="location.href='@Url.Action("Create", "Patient")'">Ingresar nuevo paciente</button>
    <button type="button" id="searchButton" style="position: relative; top: 0px; left: 0px;" value="menu" class="btn btn-warning">Volver al menú</button>

    <div>
        <table class="table table-sm" style="position: relative; top: 30px; left: 0px;">
            <thead>
                <tr class="bg-warning">
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Edad</th>
                    <th scope="col">Departamento</th>
                    <th scope="col">Municipio</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in CovidAnalyzer.Services.Storage.Instance.patientList)
                {
                    if (item.analyzed == false)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Lastname)</td>
                            <td>@Html.DisplayFor(modelItem => item.Years)</td>
                            <td>@Html.DisplayFor(modelItem => item.Departament)</td>
                            <td>@Html.DisplayFor(modelItem => item.Municipality)</td>
                            <td>@Html.ActionLink("PatientsList", "PatientsList", new { id = item.Name })</td>
                        </tr>
                    }
                    else
                    {
                        if (item.infected == false)
                        {
                            <div class="alert alert-success alert-dismissible fade show" style="position: relative; top: 20px; left: 0px;" role="alert">
                                <strong>No contagiada</strong> La persona no está contagiada de COVID-19
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Lastname)</td>
                                <td>@Html.DisplayFor(modelItem => item.Years)</td>
                                <td>@Html.DisplayFor(modelItem => item.Departament)</td>
                                <td>@Html.DisplayFor(modelItem => item.Municipality)</td>
                                <td>No contagiado</td>
                            </tr>
                        }
                        else if (item.infected == true)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" style="position: relative; top: 20px; left: 0px;" role="alert">
                                <strong>Contagiada</strong> La persona está contagiada de COVID-19
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Lastname)</td>
                                <td>@Html.DisplayFor(modelItem => item.Years)</td>
                                <td>@Html.DisplayFor(modelItem => item.Departament)</td>
                                <td>@Html.DisplayFor(modelItem => item.Municipality)</td>
                                <td>Contagiado</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
}

<script language="javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>



@section scripts{
    <script language="javascript">
        $(function update() {
            $("#searchButton").click(function () {
                var url = "@Url.Action("Modal", "Patient")";
                var type = $("#options").val();
                var search = $("#searchString").val();
                var data = {
                    collection: type,
                    searchString = search
                };
                $post(url, data).done(function (data) {
                    $("#divGet").append(data);
                });
            });
        });
    </script>
}